{
    "name": "chiron/view",
    "description": "View Template interface for the Chiron framework",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "template",
        "chiron",
        "renderer"
    ],
    "homepage": "https://github.com/ncou/Chiron-Template",
    "require": {
        "php": "^8.0 || ^8.1",
        "chiron/core": "^1.0"
    },
    "require-dev": {
        "chiron/devtools": "^1.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Chiron\\View\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Chiron\\View\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "phpstan/extension-installer": true,
            "ergebnis/composer-normalize": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "captainhook/plugin-composer": true,
            "chiron/devtools": true
        }
    },
    "extra": {
        "captainhook": {
            "force-install": true
        },
        "chiron/devtools": {
            "command-prefix": "dev"
        },
        "ramsey/conventional-commits": {
            "configFile": "conventional-commits.json"
        },
        "chiron": {
            "bootloaders": [
                "Chiron\\View\\Bootloader\\ViewDirectoryBootloader",
                "Chiron\\View\\Bootloader\\PublishViewBootloader",
                "Chiron\\View\\Bootloader\\ViewCommandBootloader"
            ]
        }
    },
    "scripts": {
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests",
        "phpstan": "phpstan analyse --ansi",
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml"
    }
}
