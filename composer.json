{
    "name": "chiron/view",
    "type": "library",
    "description": "View Template interface for the Chiron framework",
    "keywords": ["template","chiron","renderer"],
    "homepage": "https://github.com/ncou/Chiron-Template",
    "license": "MIT",
    "require": {
        "php": "^8.0|^8.1",
        "chiron/core": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "chiron/coding-standard": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "Chiron\\View\\": "src/"
        }
    },
    "autoload-dev" : {
        "psr-4": { "Chiron\\View\\Tests\\" : "tests/" }
    },
    "scripts": {
        "phpunit": "phpunit --colors=always",
        "test-coverage": "phpunit --coverage-clover clover.xml",
        "phpstan": "phpstan analyse --ansi",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "chiron": {
            "bootloaders": [
                "Chiron\\View\\Bootloader\\PublishViewBootloader",
                "Chiron\\View\\Bootloader\\ViewCommandBootloader",
                "Chiron\\View\\Bootloader\\ViewBootloader"
            ],
            "providers": [
                "Chiron\\View\\Provider\\PhpRendererServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
